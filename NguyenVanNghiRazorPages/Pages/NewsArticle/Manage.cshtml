@page
@model NguyenVanNghiRazorPages.Pages.NewsArticle.ManageModel
@{
}
<div class="container mt-4">
	<div class="d-flex justify-content-between align-items-center mb-3">
		<h1 class="text-primary"></h1>
		<button class="btn btn-success shadow-sm" type="button" data-bs-toggle="modal" data-bs-target="#createNewsArticle">
			<i class="fas fa-user-plus me-2"></i> Add News Article
		</button>
	</div>

	<div class="d-flex justify-content-between align-items-center mb-3 gap-3">
		<form class="d-flex gap-2 flex-grow-1" asp-page="Index" method="get">
			<!-- Search Input -->
			<div class="input-group">
				<input name="search" type="text" id="searchInput" class="form-control" placeholder="Search news article..." >
				<button class="btn btn-primary" type="submit">
					<i class="bi bi-search"></i> Search
				</button>
			</div>

			@* <!-- Role Selection Dropdown --> *@
			@* <select onchange="this.form.submit()" name="accountRole" class="form-select w-auto" asp-items="Model.Roles"> *@
			@* 	<option value="">All Roles</option> *@
			@* </select> *@
		</form>

		<!-- Reset Button -->
		<a asp-page="Index" class="btn btn-secondary">
			<i class="bi bi-arrow-clockwise"></i> Reset
		</a>
	</div>



	<div class="card shadow-sm">
		<div class="card-body">
			<table class="table table-hover" id="accountTable">
				<thead class="table-dark">
					<tr>
						<th>News ID</th>
						<th>News Title</th>
						<th>Created Date</th>
						<th>Category</th>
						<th>Status</th>
						<th>Created By</th>
						<th class="text-center">Actions</th>
					</tr>
				</thead>
				<tbody>
					
				</tbody>
			</table>
		</div>
	</div>
	<partial name="Create" model="Model"/>
</div>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}
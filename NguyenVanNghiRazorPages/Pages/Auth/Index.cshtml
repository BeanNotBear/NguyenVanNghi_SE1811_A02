@page
@model NguyenVanNghiRazorPages.Pages.Auth.IndexModel
@{
}

<div class="container d-flex justify-content-center align-items-center vh-100">
	<div class="card shadow-lg p-4 rounded-4" style="max-width: 400px; width: 100%;">
		<h2 class="text-center mb-4">Login</h2>
		<form method="post" asp-page="Index">
			<div class="mb-3">
				<label asp-for="LoginViewModel.Email" class="form-label fw-bold">Email:</label>
				<input asp-for="LoginViewModel.Email" type="email" class="form-control" placeholder="Enter email" required>
			</div>
			<div class="mb-3">
				<label asp-for="LoginViewModel.Password" class="form-label fw-bold">Password:</label>
				<input asp-for="LoginViewModel.Password" type="password" class="form-control" placeholder="Enter password" required>
			</div>
			<div class="form-check mb-3">
				<input asp-for="LoginViewModel.IsRemember" class="form-check-input" type="checkbox">
				<label asp-for="LoginViewModel.IsRemember" class="form-check-label">Remember me</label>
			</div>
			<button type="submit" class="btn btn-primary w-100">Login</button>
		</form>
		<div class="text-center mt-3">
			<a href="#" class="text-decoration-none">Forgot password?</a>
		</div>
	</div>
</div>
